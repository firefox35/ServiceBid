<p id="notice"><%= notice %></p>

<h1>Listing Booking Confirmations</h1>

<table>
  <thead>
    <tr>
      <th>Job offer</th>
      <th>Customer name</th>
      <th>Customer address</th>
      <th>Customer phone number</th>
      <th>Dealer name</th>
      <th>Dealer address</th>
      <th>Dealer phone number</th>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @booking_confirmations.each do |booking_confirmation| %>
      <tr>
        <td><%= booking_confirmation.job_offer_id %></td>
        <td><%= booking_confirmation.customer_name %></td>
        <td><%= booking_confirmation.customer_address %></td>
        <td><%= booking_confirmation.customer_phone_number %></td>
        <td><%= booking_confirmation.dealer_name %></td>
        <td><%= booking_confirmation.dealer_address %></td>
        <td><%= booking_confirmation.dealer_phone_number %></td>
        <td><%= booking_confirmation.date %></td>
        <td><%= booking_confirmation.time %></td>
        <td><%= link_to 'Show', booking_confirmation %></td>
        <td><%= link_to 'Edit', edit_booking_confirmation_path(booking_confirmation) %></td>
        <td><%= link_to 'Destroy', booking_confirmation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

