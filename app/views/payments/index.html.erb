<p id="notice"><%= notice %></p>

<h1>Listing Payments</h1>

<table>
  <thead>
    <tr>
      <th>Mastercard</th>
      <th>Visa</th>
      <th>Visa debit</th>
      <th>Job offer</th>
      <th>Customer name</th>
      <th>Card number</th>
      <th>Expiry date</th>
      <th>Three digit pin number</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.mastercard %></td>
        <td><%= payment.visa %></td>
        <td><%= payment.visa_debit %></td>
        <td><%= payment.job_offer_id %></td>
        <td><%= payment.customer_name %></td>
        <td><%= payment.card_number %></td>
        <td><%= payment.expiry_date %></td>
        <td><%= payment.three_digit_pin_number %></td>
        <td><%= payment.amount %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

